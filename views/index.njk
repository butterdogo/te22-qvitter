{% extends "layout.njk" %}
{% block content %}

<main>

    <h1>{{title}}</h1>

    {% for tweet in tweets %}
    <ul class="tweets">
        <li class="tweet">
            <article>
                <header>
                    <h2>{{tweet.name}}</h2>
                    <time datetime="{{ tweet.updated_at }}">{{ tweet.updated_at }}</time>
                </header>
                <p>{{tweet.message}}</p>
                <footer>
                    <ul>
                        <li>shared</li>
                        <li>Reply</li>
                    </ul>
                </footer>
            </article>
        </li>
    </ul>
    {%endfor%}
</main>

{% endblock %}