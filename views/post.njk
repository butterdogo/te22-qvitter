        {% for item in user %}
          <option value="{{item.id}}">{{item.name}}</option>
        {% endfor %}
    </select>
    
    <label for="message">message</label>
    <input type="text" name="message" id="message">
    
    <button type="submit">Submit</button>
  </form>

  {% endblock %}